<UserControl x:Name="userControl" x:Class="UserBubble.Bubble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserBubble"
             mc:Ignorable="d" Height="100" Width="80">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/UserBubble;component/lantern.png"/>
        </Grid.Background>

        <Grid Grid.Row="1">
            <TextBlock x:Name="TextShower" Text="张三" MaxWidth="80" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"  Margin="0,0,0,0" LineStackingStrategy="BlockLineHeight" TextWrapping="Wrap"/>
        </Grid>

    </Grid>
</UserControl>
